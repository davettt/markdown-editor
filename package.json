{
  "name": "markdown-editor",
  "version": "1.0.0",
  "description": "Secure local Markdown editor with live preview",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --import ./loader.mjs src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/ --max-warnings 0",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/ public/",
    "format:check": "prettier --check src/ public/",
    "security:audit": "npm audit --production",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run security:audit"
  },
  "keywords": [
    "markdown",
    "editor",
    "local",
    "preview"
  ],
  "author": "David Tiong",
  "license": "MIT",
  "dependencies": {
    "dompurify": "^3.0.6",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "marked": "^11.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
